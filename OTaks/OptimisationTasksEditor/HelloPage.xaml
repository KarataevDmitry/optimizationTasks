<Page x:Class="OptimisationTasksEditor.HelloPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OptimisationTasksEditor"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="HelloPage">

    <Grid>
        <Label x:Name="lblWelcome" Content="Welcome!" HorizontalAlignment="Center" Margin="24,10,0,0" VerticalAlignment="Top" Width="255" FontFamily="Vladimir Script" FontSize="50" FontStretch="ExtraCondensed" HorizontalContentAlignment="Center" FontWeight="Bold"/>
        <StackPanel x:Name="stackTaskType" Margin="55,102,44,102">
            <Button x:Name="btnNext" Content="Одномерная оптимизация" HorizontalAlignment="Left" VerticalAlignment="Top" Width="201" Height="35" Click="btnNext_Click" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
            <Button x:Name="btnLinearProgramming" Content="Линейное программирование" HorizontalAlignment="Left" Margin="0,0,-1,0" VerticalAlignment="Top" Width="202" Height="35" Click="btnLinear_Click"/>
        </StackPanel>

    </Grid>
</Page>
